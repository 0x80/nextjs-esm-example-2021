{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "composite": true,
    // "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["**/node_modules"],
  "references": [
    {
      "path": "./packages/shared-es-module"
    },
    {
      "path": "./packages/nextjs-app"
    }
  ]
}
